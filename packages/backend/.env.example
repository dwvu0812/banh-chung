# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# JWT Configuration (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-64-character-hex-string-here
JWT_REFRESH_SECRET=your-different-64-character-hex-string-here

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URLs (for CORS)
FRONTEND_URL_DEV=http://localhost:3000
FRONTEND_URL_PROD=https://your-app.vercel.app

# Optional: Text-to-Speech API (if using)
TTS_API_KEY=your-tts-api-key-if-needed
